{% extends "base.jinja2" %}
{% block content %}
  <div>
    Details for <b>{{ product.name }}</b>
    <div id="reviews">
      Product reviews:<br/>
      <div>-----------------------------------</div>
      {% for review in reviews %}
        <div>{{ review.author }} wrote:</div>
        <div>{{ review.text }}</div>
        <div>-----------------------------------</div>
      {% endfor %}
    </div>
    <div>
      <p>Submit your review</p>
      <form method="POST">
        <input type="text" name="author" value="" placeholder="Your name"><br/>
        <textarea name="review" cols="80" rows="10" placeholder="Your review"></textarea><br/>
        <input type="submit" name="submit" value="Submit">
      </form>
    </div>
  </div>
{% endblock %}

